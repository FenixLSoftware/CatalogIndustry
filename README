Category.where.not(id: Category.all.roots.map(&:id)).map{|c| [c.parent.name, c.name, c.catalogs.size, c.catalogs.map{|x| x.translations.where(locale: 'es').size}.inject(0){|sum,x| sum + x },c.catalogs.map{|x| x.translations.where(locale: 'en').size}.inject(0){|sum,x| sum + x },c.catalogs.map{|x| x.translations.where(locale: 'it').size}.inject(0){|sum,x| sum + x },c.catalogs.map{|x| x.translations.where(locale: 'fr').size}.inject(0){|sum,x| sum + x },c.catalogs.map{|x| x.translations.where(locale: 'de').size}.inject(0){|sum,x| sum + x }]}


