<div class="modal" id="mLogin">
  <div class="login">
        <div class="actions">
          <%= link_to user_linkedin_omniauth_authorize_path, class: 'button button_linkedin button-expand' do %>
              <span class="fa fa-linkedin" aria-hidden="true"></span><%= t('shared.login.linkedin') %>
          <% end %>
        </div><!-- .actions -->
  </div>
  <div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form_validate'}) do |f| %>

        <div class="field">
          <label for="login_mail"><%= t('shared.login.email') %></label>
          <%= f.email_field :email, autofocus: true, placeholder: t('shared.login.your_email'), class: 'required email' %>
        </div><!-- .field -->
        <div class="field">
          <label for="login_pass"><%= t('shared.login.password') %></label>
          <%= f.password_field :password, autocomplete: 'off', placeholder: t('shared.login.your_password'), class: 'required' %>
        </div><!-- .field -->
        <div class="actions">
          <div class="form-check">
            <label class="form-check-label">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= t('shared.login.remember_me') %>
            </label>
          </div>
          <a id="openRecovery" class="forgot" href="#"><%= t('shared.login.fpass') %></a>
        </div>
        <div class="actions">
          <button class="button button-expand" type="submit"><%= t('shared.login.log_in') %></button>
        </div>
    <% end %>
  </div><!-- .login -->
  <div class="register">
    <div class="actions">
      <small><%= t('shared.login.no_account') %></small>
      <a class="button_secondary" href="<%= register_path %>"><%= t('shared.login.sing_up') %></a>
    </div>
  </div><!-- .register -->
</div><!-- .modal #mLogin -->
