<div class="modal" id="mRecovery">
  <div class="recovery">
    <p class="title_S"><%=t('shared.recovery.restore_password')%></p>
    <p><%=t('shared.recovery.commentary')%></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <label class="screen-reader-text" for="login_mail_recovery"><%=t('shared.recovery.email')%></label>
        <%= f.email_field :email, autofocus: true, placeholder: t('shared.recovery.your_email') %>
      </div><!-- .field -->
      <div class="actions">
        <button class="button button-expand" type="submit"><%=t('shared.recovery.send_link')%></button>
      </div>
    <% end %>
  </div><!-- .recovery -->
</div><!-- .modal #mRecovery -->
