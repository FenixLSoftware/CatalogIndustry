

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'login', class: 'form_validate'}) do |login_form| %>

  <div>
      <p><%= t('registrations.index.have_account') %></p>

      <div class="row">
        <div class="col col_1of2">
          <div class="field">
            <label for="register_login_mail"><%= t('registrations.index.mail') %></label>
            <%= login_form.email_field :email, autofocus: true, placeholder: t('registrations.index.your_mail'), class: 'required email' %>
          </div><!-- .field -->
        </div>
        <div class="col col_1of2">
          <div class="field">
            <label for="register_login_pass"><%= t('registrations.index.password') %></label>
            <%= login_form.password_field :password, autocomplete: 'off', placeholder: t('registrations.index.your_password'), class: 'required' %>
          </div><!-- .field -->
        </div>
      </div>


      <div class="form-check">
        <label class="form-check-label">
          <%= login_form.check_box :remember_me, class: 'form-check-input' %>
          <%= t('shared.login.remember_me') %>
        </label>
      </div>

      <div class="actions">
        <%= login_form.submit t('registrations.index.log_in'), class: 'button_secondary button-expand' %>
      </div>
</div>
<% end %>
