<div id="flexslider_hero" class="flexslider hero_flexslider">
  <ul class="slides">
    <% if (@carousels = Carousel.where(published: 1)).count != 0 %>
        <% @carousels.each do |carousel| %>
            <li style="background-image: url('<%= asset_path (carousel.picture)%>');" class="hero carousel-item">
              <div class="container">
                <br><br>
                <h2 class="hero_title"><%= carousel.title %>  </h2>
                <%= form_tag(search_post_path, method: :get, class: 'hero_form') do %>
                    <%= text_field_tag :term, '', class: 'big-text-field', placeholder: t('m.placeholder_search') %>
                    <%= button_tag t('layouts.frontend.search'), class: 'button' %>
                <% end %>
                <div class="hero_text">
                  <p><%= link_to(carousel.url.gsub('http://', '').gsub('https://',''), carousel.url, target: '_blank') %></p>
                  <p><%= carousel.description %></p>

                </div>
              </div>
            </li>
        <% end %>
    <% else %>
        <li style="background-image: url('images/fallback/home.png');" class="hero carousel-item">
          <div class="container">
                     <br><br>         <br><br>
            <h2 class="hero_title"><%= t('layouts.frontend.home.title') %></h2>
            <%= form_tag(search_post_path, method: :get, class: 'hero_form') do %>
                <%= text_field_tag :term, '', class: 'big-text-field', placeholder: t('m.placeholder_search') %>
                <%= button_tag t('layouts.frontend.search'), class: 'button' %>
            <% end %>
            <div class="hero_text">
              <p><a><%= t('layouts.frontend.home.divertis') %></a></p>
              <p><%= link_to("www.divertis.com", "http://www.divertis.com", target: :_blank) %></p>
            </div>
          </div>
        </li>
    <% end %>


  </ul>
</div>
