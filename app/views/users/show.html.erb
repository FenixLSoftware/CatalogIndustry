<% end %>

  <ul>
    <li><a href="<%= root_path %>"><%=t('users.show.start')%></a></li>
    <li><a href="<%= users_path %>"><%=t('users.show.companies')%></a></li>
    <li class="current"><%= @company.company_name %></li>
  </ul>
